{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":dependencyDashboard",
        ":automergeMinor",
        ":automergeDigest"
    ],
    "pinDigests": true,
    "enabledManagers": [
        "dockerfile",
        "gomod"
    ],
    "dockerfile": {
        "fileMatch": [
            "Dockerfile"
        ],
        "pinDigests": true
    },
    "gomod": {
        "postUpdateOptions": [
            "gomodTidy"
        ]
    },
    "labels": [
        "renovate"
    ],
    "packageRules": [
        {
            "description": "Automerge minor/patch/digest for dockerfile",
            "groupName": "docker-automerge-dependencies",
            "matchManagers": [
                "dockerfile"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pinDigest"
            ],
            "automerge": true
        }
    ],
    "timezone": "Europe/Berlin"
}
